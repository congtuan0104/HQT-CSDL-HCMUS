    <style>

        .card img {
            margin: 1px;
            border-bottom: 2px solid #ff660051;
        }


        .card-body {
            padding-bottom: 3px;
            padding-top: 5px;
        }

        .card-footer {
            padding: 0;
        }

        .card-footer .btn {
            background-color: #ff6600;
            color: white;
            border-radius: 0;
            padding: 5px 0;
            font-size: 15px;
        }
        .card-footer .btn:hover{
            background-color: rgb(255, 0, 0);
        }
    </style>
    

